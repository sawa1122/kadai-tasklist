<% if logged_in? %>
  <p>ユーザー: <%= current_user.name %></p>
<h1>タスク一覧</h1>

<ul>
    <% @tasks.each do |task| %>
      <li><%= link_to task.id, task %> : <%= task.content %> &gt; <%= task.status %></li>
    <% end %>
</ul>

<%= link_to 'タスクの追加', new_task_path %>
<br>
<%= link_to 'Sign up now!', signup_path %>
<br>
<%= link_to 'Logout', logout_path, method: :delete %>
<% else %>
<%= link_to 'Login', login_path %>
<% end %>